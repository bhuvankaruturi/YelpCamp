<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mt-5">Edit Comment</h1>
    <div class="row justify-content-md-center mt-4">
        <form class="col-lg-4 col-md-6 col-sm-12" action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value='<%=comment.text%>' placeholder="Enter a review">
            </div>
            <div class="form-group">
                <button class="btn btn btn-primary btn-block">Save</button>
            </div>
            <a href="/campgrounds/<%=campgroundId%>">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>