<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value='<%=comment.text%>' placeholder="Enter a review">
            </div>
            <div class="form-group">
                <button class="btn btn btn-primary btn-block">Save</button>
            </div>
        </form>
        <a href="/campgrounds/<%=campgroundId%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>