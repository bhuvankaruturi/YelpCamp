<% include ../partials/header %>

<div class="container">
    <h1 class="form-heading mt-4">Edit <%=campground.name%></h1>
    <div class="row justify-content-md-center" style="margin: 25px auto;">
        <form class="col-lg-4 col-md-6 col-sm-12" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value='<%=campground.name%>' placeholder="Campground Name" maxlength="50" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value='<%=campground.image%>' placeholder="Image url" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="5" type="text" name="campground[description]" placeholder="description" required><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value='<%=campground.price%>' placeholder="price" minvalue=0.1 step=0.1>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>