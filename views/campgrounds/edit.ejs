<% include ../partials/header %>

<div class="container">
    <h1 class="form-heading">Edit<%=campground.name%></h1>
    <div style="width: 40%; margin: 25px auto;">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value='<%=campground.name%>' placeholder="Campground Name" maxlength="50">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value='<%=campground.image%>' placeholder="Image url">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="5" type="text" name="campground[description]" placeholder="description"><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value='<%=campground.price%>' placeholder="price" minvalue=0.1 step=0.1>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>