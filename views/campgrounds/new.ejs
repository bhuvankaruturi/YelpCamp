<% include ../partials/header %>

<div class="container">
    <h1 class="form-heading">Create a new Campground</h1>
    <div class="row justify-content-md-center" style="margin: 25px auto;">
        <form class="col-lg-4 col-md-6 col-sm-12" action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" placeholder="Camp Name" maxlength="50" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="Image url" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="5" type="text" name="campground[description]" placeholder="description" required></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" placeholder="price" minvalue=0.1 step=0.1>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>